  <div id="main-banner">
  <div class="container d-flex justify-content-center flex-column h-100">
  <div>
    <h1 class="my-3 headline">Try our award-winning cocktail recipes.</h1></div>
    <div class='form-group'>
        <%= form_tag cocktails_path, method: :get, id: 'search-form' do %>
          <p class='mr-4 headline-2'>I've got</p><%= select_tag :query, options_from_collection_for_select(Ingredient.all.order(name: :asc), :id, :name), class: 'form-control custom-select', style: 'height: 3rem; max-width: 500px; background-color: white;' %>
          <%= submit_tag "Let's get shaking", class: 'btn btn-primary search-btn' %>
        <% end %>
      </div>
  </div>
  <div class='container mt-2 py-2 bg-white'>
    <div class='row d-flex justify-content-center'>
    <h2>Most popular</h2>
      <% unless @cocktails.empty? %>
        <%= render partial: 'cocktail_card', collection: @cocktails %>
      <% else %>
        There are no cocktails with that ingredient yet. Click here to add one.
      <% end %>
    </div>
  </div>
</div>

<script>

  $(document).on('ready', function () {
    $("#query").select2({
      placeholder: "Choose an ingredient",
      theme: "bootstrap4"
    });

    if(performance.navigation.type == 2){
   location.reload(true);
}
  });


</script>



